<%- include('./partials/head')%>
<link href="/css/admin.css" rel="stylesheet">
<script src="/scripts/admin.js" defer></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" id="tff-nav">
            <a class="navbar-brand  tff-logo" href="/admin/all">
              <img id="tanks-for-fish-logo" src="/images/fish_tank3.png" alt="tanks for fish">
            </a>
            <div class="container-fluid">
              <a class="navbar-brand title" id="single-day-regular-id" href="/admin/all">Tanks For Fish</a>
            </div>
            <a class="home-links" href="/admin/upload">Bulk Upload </a>
            <a class="home-links" href="/products/all">User View</a>
            <a class="home-links" href="/auth/logout">Logout</a>
          </nav>
    </header>
    <main id="product-edit-main">
        <h1 id="product-edit-heading">Edit Product</h1>
        <section id="product-edit-container">
            <form method="POST" action="/admin/update/<%= product.product_id %>" id="product-edit-form">
                <div class="form-row">
                    <label for="product-model">Product ID:</label>
                    <input type="text" id="product-id" name="product-id" value="<%= product.product_id%>" readonly>
                </div>
                <div class="form-row">
                    <label for="product-model">Category Name:</label>
                    <input type="text" id="category-name" name="category-name" value="<%= product.category%>">
                </div>
                <div class="form-row">
                    <label for="product-model">Model:</label>
                    <input type="text" id="product-model" name="product-model" value="<%= product.model%>">
                </div>
                <div class="form-row">
                    <label for="product-name">Product Name:</label>
                    <input type="text" id="product-name" name="product-name" value="<%= product.name%>">
                </div>
                <div class="form-row">
                    <label for="product-description">Description:</label>
                <textarea id="product-description" name="product-description"><%= product.description%></textarea>
                </div>
                <div class="form-row">
                    <label for="product-price">Price:</label>
                    <input type="number" id="product-price" name="product-price" value="<%= product.price%>">
                </div>
                <div class="form-row">
                    <label for="product-dimensions">Dimensions:</label>
                    <input type="text" id="product-dimensions" name="product-dimensions"
                        value="<%= product.dimensions%>">
                </div>
                <div class="form-row">
                    <label for="product-material">Material:</label>
                    <input type="text" id="product-material" name="product-material" value="<%= product.material%>">
                </div>
                <div class="form-row">
                    <label for="product-color">Color:</label>
                    <input type="text" id="product-color" name="product-color" value="<%= product.color%>">
                </div>
                <div class="form-row">
                    <label for="product-image">Image:</label>
                    <input type="text" id="product-image" name="product-image" value="<%= product.image_url%>">
                </div>
                <div id="edit-btn-container">
                    <button type="button" data-id="<%= product.product_id %>" data-name="<%= product.name %>" id="delete-edit-btn" class="delete-btn">Delete</button>
                    <button type="submit" id="save-edit-btn">Save Changes</button>
                </div>
            </form>
        </section>
    </main>
</body>